<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.EleBicycle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/buttonBackground</item>
		<item name="colorPrimaryVariant">#F8F5F5</item>
		<item name="colorOnPrimary">@color/white</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/teal_200</item>
		<item name="colorSecondaryVariant">@color/teal_700</item>
		<item name="colorOnSecondary">@color/border_grey</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
		<!-- Customize your theme here. -->
	</style>

	<style name="Theme.EleBicycle.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>

	</style>

	<style name="Theme.EleBicycle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
	<style name="Theme.EleBicycle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

	<style name="button_style">
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:background">@drawable/button_background</item>
		<item name="android:minWidth">150dp</item>
		<item name="android:minHeight">50dp</item>
		<item name="android:textSize">18sp</item>
	</style>
</resources>